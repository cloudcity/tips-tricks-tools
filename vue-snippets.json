			"import { render } from '@/utils/testUtils';",
			"import ${TM_FILENAME/(.*)\\.spec\\..+$/$1/} from '../${TM_FILENAME/(.*)\\.spec\\..+$/$1/}.vue';",
			"",
			"const initialProps = {",
			"\t$1",
			"};",
			"",
			"const renderComponent = (options = {}) => render(${TM_FILENAME/(.*)\\.spec\\..+$/$1/}, { ...options });",
			"",
			"describe('${TM_FILENAME/(.*)\\.spec\\..+$/$1/}', () => {",
			"",
			"\t$0",
			"",
			"})"
